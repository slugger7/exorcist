{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "firefox",
      "request": "launch",
      "name": "Launch firefox",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/web",
      "tmpDir": "~/.mozilla/firefox"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/apps/web"
    },
    {
      "name": "Run server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/apps/server/cmd/exorcist",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Run web",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "/home/slugger/.nvm/versions/node/v20.10.0/bin/npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "envFile": "${workspaceFolder}/.env",
      "console": "internalConsole",
      "cwd": "${workspaceFolder}/apps/web"
    },
    {
      "command": "npm run stub",
      "name": "Run stub webserver",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/apps/web"
    },
    {
      "name": "Run fsnotify",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/apps/server/playground/fsnotify",
      "cwd": "${workspaceFolder}/apps/server"
    },
  ]
}